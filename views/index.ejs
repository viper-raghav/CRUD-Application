<%- include('./partials/header.ejs')%>
    <!-- Your HTML content here -->
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-6 mb-4">
                <div class="card text-white bg-success shadow-sm rounded">
                    <div class="card-body text-center">
                        <h2 class="card-title">Add New Student</h2>
                        <p class="card-text">Create a new student profile quickly and easily.</p>
                        <form method="post">
                            <div class="mb-3">
                                <label for="name" class="form-label">Name</label>
                                <input type="text" class="form-control" id="name" name="name" />
                            </div>
                            <div class="mb-3">
                                <label for="age" class="form-label">Age</label>
                                <input type="text" class="form-control" id="age" name="age" />
                            </div>
                            <div class="mb-3">
                                <label for="fees" class="form-label">Fees</label>
                                <input type="text" class="form-control" id="fees" name="fees" />
                            </div>
                            <button type="submit" class="btn btn-primary w-100">Submit</button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-md-6 mb-4">
                <div class="card text-white bg-danger shadow-sm rounded">
                    <div class="card-body text-center">
                        <h2 class="card-title">List of Students</h2>
                        <p class="card-text">View and manage all student profiles.</p>
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th scope="col">No</th>
                                    <th scope="col">Name</th>
                                    <th scope="col">Age</th>
                                    <th scope="col">Fees</th>
                                    <th scope="col">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>1</td>
                                    <td>Raghav</td>
                                    <td>20</td>
                                    <td>80,600</td>
                                    <td>
                                        <i class="fas fa-pen-square text-info me-2"></i>
                                        <i class="fas fa-trash text-danger"></i>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('./partials/footer.ejs')%>